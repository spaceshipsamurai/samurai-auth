doctype html
html(lang="en")
    head
        include admin_head
    body(ng-app="ssAuth").fixed-header.smart-style-1
        header#header
            span#logo(style="margin-left: 10px; color: #fff")
                |Spaceship Samurai Services
            div#logout.btn-header.transparent.pull-right
                span.pull-right
                    a(href="/session/logout", title="Sign Out", target="_self")
                        i.fa.fa-sign-out
